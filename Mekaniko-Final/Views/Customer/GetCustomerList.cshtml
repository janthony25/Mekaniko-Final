@model List<Mekaniko_Final.Models.Dto.CustomerSummaryDto>

<h2>Customer List</h2>

<table class="table table-striped">
    <thead>
        <th>Customer ID</th>
        <th>Customer Name</th>
        <th>Email Address</th>
        <th>Contact #</th>
        <th></th>
    </thead>
    <tbody>
        @foreach(var customer in Model)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.CustomerName</td>
                <td>@customer.CustomerEmail</td>
                <td>@customer.CustomerNumber</td>
                <td>
                    <div class="d-flex align-items-center">
                        <a asp-controller="Customer" asp-action="GetCustomerCar" asp-route-id="@customer.CustomerId" class=""><i class="bi bi-pencil-square"></i></a>
                        <a class="ms-2"><i class="bi bi-trash3-fill"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>